<h1>Products</h1>

<%= link_to "New product", new_product_path %>

<div id="products">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 my-3">
        <div class="card">
          <%= link_to product do %>
            <img src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" style="width:100%; height:300px;">
          <% end %>
          <div class="card-body">
            <%= link_to product do %>
              <h5 class="card-title"><%= product.name %></h5>
            <% end %>
            <p class="card-text"><%= product.description %></p>
            <h3 class="card-text"><%= product.price %>â‚¹</h3>
            <%= link_to "#", method: :post, class: 'btn btn-primary add-to-cart', data: { product_id: product.id } do %>
              <i class="bi bi-cart"></i> Add to cart
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
